{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "target": "ES2017",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ES2019"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@redux/*": ["./src/redux/*"],
      "@typings": ["./src/typings"],
      "@utils": ["./src/utils"]
    }
  }
}
